#!/usr/bin/env bash
set -e

BIN="./node_modules/.bin"
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_DIR="$DIR/../"
VERSION=$(node -e "console.log(require('$DIR/../package.json').version)")

URL="https://cdn.auth0.com/connector/windows/adldap-$VERSION.msi"
CDN_EXISTS=$(curl -s -o /dev/null -w "%{http_code}" $URL | grep 200 || true)

aws s3 cp $PROJECT_DIR/update-connector.ps1 s3://assets.us.auth0.com/connector/windows/update-connector.ps1 --region us-west-1
aws s3 cp $PROJECT_DIR/update-connector.cmd s3://assets.us.auth0.com/connector/windows/update-connector.cmd --region us-west-1

if [ ! -z "$CDN_EXISTS" ]; then
    echo "There is already a version $VERSION in the CDN. Skiping cdn publish."
else
    echo "Deploying $VERSION to cdn"

    echo "{\"version\":\"$VERSION\", \"url\": \"$URL\", \"checksum\":\"$(shasum $PROJECT_DIR/adldap.msi | cut -d ' ' -f 1)\"}" \
        > $PROJECT_DIR/latest.json

    aws s3 cp $PROJECT_DIR/latest.json s3://assets.us.auth0.com/connector/windows/latest.json --region us-west-1
    aws s3 cp $PROJECT_DIR/adldap.msi s3://assets.us.auth0.com/connector/windows/adldap-$VERSION.msi --region us-west-1
    aws s3 cp $PROJECT_DIR/adldap.msi s3://assets.us.auth0.com/connector/windows/adldap-latest.msi --region us-west-1
fi

TAG_NAME="v$VERSION"
TAG_EXISTS=$(git tag -l "$TAG_NAME")

if [ ! -z "$TAG_EXISTS" ]; then
    echo "There is already a tag $TAG_EXISTS in git. Skiping git deploy."
else
    echo "Deploying $VERSION to git"
    LAST_COMMIT=$(git log -1 --pretty=%B)
    git tag "$TAG_NAME" -m "$LAST_COMMIT"
    git push origin $TAG_NAME
fi
